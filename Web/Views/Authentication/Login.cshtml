@model Web.Presentation.ViewModels.IdentityViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-body">
        @using (Html.BeginForm("Login", "Authentication", FormMethod.Post, new { @class = "form-horizontal", @style = "height: 200px; padding: 30px;" }))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                <div class="form-group">
                    @Html.LabelFor(m => Model.Username, new { @class = "control-label" })
                    @Html.TextBoxFor(m => Model.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => Model.Username, null, new { @class = "label label-danger pull-right" })
                    <br />
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => Model.Password, new { @class = "control-label" })
                    @Html.TextBoxFor(m => Model.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => Model.Password, null, new { @class = "label label-danger pull-right" })
                    <br />
                </div>
                
                <div class="form-group">
                    @Html.CheckBoxFor(m => Model.IsPersistent)
                    @Html.LabelFor(m => Model.IsPersistent)
                </div>

            </fieldset>

            <br />
            <div class="form-group pull-right">
                <input id="Login" type="submit" class="btn btn-primary pull-right" style="margin-left: 5px;" value="Login" />
            </div>
        }
    </div>
</div>